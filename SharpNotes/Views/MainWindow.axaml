<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SharpNotes.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="using:SharpNotes.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SharpNotes.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="SharpNotes">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="250, *" Background="#FFF9F2">
        <!-- Panel boczny z notatkami -->
        <Border Grid.Column="0" Margin="5" Padding="5" Background="#FEDABE" CornerRadius="5">
            <Grid RowDefinitions="Auto, Auto, *">
                <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="5" Margin="0,0,0,5">
                    <Button Content="Nowa"
                            Padding="10,5"
                            Command="{Binding CreateNewNoteCommand}"
                            Background="#ED8451"
                            Foreground="White" />

                    <Button Content="Odśwież"
                            Padding="10,5"
                            Command="{Binding LoadNotesCommand}"
                            Background="#ED8451"
                            Foreground="White" />
                </StackPanel>
                
                <!-- Wyszukiwarka -->
                <Grid Grid.Row="1" ColumnDefinitions="*, Auto" Margin="0,0,0,5">
                    <TextBox Grid.Column="0" 
                             Text="{Binding SearchText}" 
                             Watermark="Szukaj..."
                             Margin="0,0,5,0"/>
                    <Button Grid.Column="1" 
                            Content="🔍"
                            Command="{Binding SearchCommand}"
                            Background="#ED8451"
                            Foreground="White" />
                </Grid>

                <!-- Lista notatek -->
                <ScrollViewer Grid.Row="2">
                    <ItemsControl ItemsSource="{Binding Notes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Padding="0"
                                        Background="Transparent"
                                        Command="{Binding $parent[Window].DataContext.SelectNoteCommand}"
                                        CommandParameter="{Binding}">
                                    <controls:NoteListItem />
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Wskaźnik ładowania -->
                <Border Grid.Row="2"
                        Background="#80000000"
                        IsVisible="{Binding IsLoading}">
                    <ProgressBar IsIndeterminate="True"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center" />
                </Border>
            </Grid>
        </Border>

        <!-- Panel zawartości notatki -->
        <Border Grid.Column="1" Margin="5" Padding="5" Background="#ED8451" CornerRadius="5">
            <Grid RowDefinitions="Auto, *, Auto">
                <!-- Tytuł notatki -->
                <Border Grid.Row="0" Background="#FEDABE" Margin="5" Padding="10" CornerRadius="5">
                    <TextBlock Text="{Binding TitleTextBox}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="16" />
                </Border>
                
                <!-- Zawartość notatki - tryb widoku lub edycji -->
                <Border Grid.Row="1" Background="#FEDABE" Margin="5" Padding="10" CornerRadius="5">
                    <Grid>
                        <!-- Tryb widoku -->
                        <TextBlock Text="{Binding SelectedNote.Content}" 
                                   TextWrapping="Wrap" 
                                   IsVisible="{Binding !IsEditing}" />
                        
                        <!-- Tryb edycji -->
                        <controls:NoteEditor DataContext="{Binding SelectedNote}" 
                                             IsVisible="{Binding $parent[Window].DataContext.IsEditing}" />
                        
                        <!-- Wskaźnik zapisywania -->
                        <Border Background="#80000000"
                                IsVisible="{Binding IsSaving}">
                            <ProgressBar IsIndeterminate="True"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Center" />
                        </Border>
                    </Grid>
                </Border>
                
                <!-- Przyciski akcji -->
                <StackPanel Grid.Row="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Spacing="5"
                            Margin="5">
                    <Button Content="Edytuj"
                            Command="{Binding EditNoteCommand}"
                            IsVisible="{Binding !IsEditing}"
                            IsEnabled="{Binding SelectedNote, Converter={x:Static ObjectConverters.IsNotNull}}"
                            Background="#FEDABE" />
                    
                    <Button Content="Zapisz"
                            Command="{Binding SaveNoteCommand}"
                            IsVisible="{Binding IsEditing}"
                            Background="#FEDABE" />
                    
                    <Button Content="Usuń"
                            Command="{Binding DeleteNoteCommand}"
                            IsEnabled="{Binding SelectedNote, Converter={x:Static ObjectConverters.IsNotNull}}"
                            Background="#FEDABE" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>