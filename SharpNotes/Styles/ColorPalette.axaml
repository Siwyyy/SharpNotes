<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Colors -->
    <Color x:Key="GoldColor">#f1c981</Color>
    <Color x:Key="GoldLightColor">#ffe488</Color>
    <Color x:Key="BackgroundColor">#08090e</Color>
    <Color x:Key="TextDarkColor">#333333</Color>
    <Color x:Key="TextLightColor">#555555</Color>
    <Color x:Key="OverlayColor">#80000000</Color>
    <Color x:Key="WhiteColor">White</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="GoldBrush" Color="{StaticResource GoldColor}"/>
    <SolidColorBrush x:Key="GoldLightBrush" Color="{StaticResource GoldLightColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="TextDarkBrush" Color="{StaticResource TextDarkColor}"/>
    <SolidColorBrush x:Key="TextLightBrush" Color="{StaticResource TextLightColor}"/>
    <SolidColorBrush x:Key="OverlayBrush" Color="{StaticResource OverlayColor}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource WhiteColor}"/>
</ResourceDictionary>